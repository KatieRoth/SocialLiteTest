        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dance"
        android:id="@+id/checkBox10"
        android:checked="false"
        android:layout_below="@+id/checkBox12"
        android:layout_marginLeft="100dp"
        android:scaleY="1.5"
        android:scaleX="1.5"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
