<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.katie.sociallitetest.PrefereceActivity"
    android:background="@drawable/preferences">

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Music"
        android:id="@+id/checkBox8"
        android:checked="false"
        android:scaleY="1.5"
        android:scaleX="1.5"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="90dp"/>

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Drama"
        android:id="@+id/checkBox9"
        android:checked="false"
        android:scaleY="1.5"
        android:scaleX="1.5"
        android:layout_below="@+id/checkBox8"
        android:layout_alignLeft="@id/checkBox8"/>

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Dance"
        android:id="@+id/checkBox10"
        android:checked="false"
        android:scaleY="1.5"
        android:scaleX="1.5"
        android:layout_below="@+id/checkBox9"
        android:layout_alignLeft="@id/checkBox9"/>

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Cooking"
        android:id="@+id/checkBox11"
        android:checked="false"
        android:scaleY="1.5"
        android:scaleX="1.5"
        android:layout_below="@+id/checkBox10"
        android:layout_alignLeft="@id/checkBox10"/>

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Other"
        android:id="@+id/checkBox12"
        android:checked="false"
        android:scaleY="1.5"
        android:scaleX="1.5"
        android:layout_below="@+id/checkBox11"
        android:layout_alignLeft="@id/checkBox11"/>

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:indeterminate="false"
        android:layout_marginLeft="90dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/checkBox3"
        android:layout_alignEnd="@+id/checkBox3" />

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="Mon."
        android:id="@+id/checkBox"
        android:checked="false"
        android:scaleY="1.5"
        android:scaleX="1.5"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="90dp"/>

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="Tues."
        android:id="@+id/checkBox2"
        android:checked="false"
        android:scaleY="1.5"
        android:scaleX="1.5"
        android:layout_below="@+id/checkBox"
        android:layout_alignLeft="@id/checkBox"/>

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="Wed."
        android:id="@+id/checkBox3"
        android:checked="false"
        android:scaleY="1.5"
        android:scaleX="1.5"
        android:layout_below="@+id/checkBox2"
        android:layout_alignLeft="@id/checkBox2"/>

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="Thurs."
        android:id="@+id/checkBox4"
        android:checked="false"
        android:scaleY="1.5"
        android:scaleX="1.5"
        android:layout_above="@+id/checkBox2"
        android:layout_toRightOf="@+id/checkBox"
        android:layout_toEndOf="@+id/checkBox"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp" />

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="Fri."
        android:id="@+id/checkBox5"
        android:checked="false"
        android:scaleY="1.5"
        android:scaleX="1.5"
        android:layout_below="@+id/checkBox4"
        android:layout_alignLeft="@+id/checkBox4"
        android:layout_alignStart="@+id/checkBox4" />

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="Sat."
        android:id="@+id/checkBox6"
        android:checked="false"
        android:scaleY="1.5"
        android:scaleX="1.5"
        android:layout_below="@+id/checkBox5"
        android:layout_alignLeft="@+id/checkBox5"
        android:layout_alignStart="@+id/checkBox5" />

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="Sun."
        android:id="@+id/checkBox7"
        android:checked="false"
        android:scaleY="1.5"
        android:scaleX="1.5"
        android:layout_below="@id/checkBox6"
        android:layout_alignLeft="@+id/checkBox6"
        android:layout_alignStart="@+id/checkBox6" />

</RelativeLayout>
